@model Eng360Web.Models.ViewModel.LeaveMasViewModel

@{
    Layout = null;
}

<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>

<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />



<div class="row inner-page--container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b> Add Leave</b>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="modal-body">
                    @using (Html.BeginForm("LeaveMasCreate", "Supplier", FormMethod.Post, new { role = "form", id = "leaveMasForm" }))
                    {
                    @Html.AntiForgeryToken()



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="row">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.LeaveMasType, htmlAttributes: new { @class = "control-label required" }) @Html.ValidationMessageFor(model => model.LeaveMasType, "", new { @class = "text-danger" })
                            <div>
                                @Html.DropDownList("LeaveId", null, htmlAttributes: new { @class = "form-control", @onchange = "onclientChange(this)" })

                            </div>
                        </div>


                        <div class="col-md-10">
                            @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                            <div>
                                @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                            <div>
                                @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.NoOfDays, htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.NoOfDays, "", new { @class = "text-danger" })
                            <div>
                                @Html.EditorFor(model => model.NoOfDays, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="col-md-10">
                            @Html.LabelFor(model => model.RemainingLeaves, htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.RemainingLeaves, "", new { @class = "text-danger" })
                            <div>
                                @Html.EditorFor(model => model.RemainingLeaves, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="col-md-10">
                            @Html.LabelFor(model => model.LeaveReason, htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.LeaveReason, "", new { @class = "text-danger" })
                            <div>
                                @Html.EditorFor(model => model.LeaveReason, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>



                    </div>





                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

                        <button type="button" id="create-leavemas-dialog-save" class="btn btn-primary">Create</button>


                    </div>


                    }
                </div>
            </div>
        </div>
    </div>
</div>

