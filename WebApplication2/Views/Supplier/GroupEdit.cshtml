@model Eng360Web.Models.ViewModel.GroupViewModel

@{
    Layout = null;
}

<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b> Edit User Group </b>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="modal-body">
                    @using (Html.BeginForm("GroupEdit", "Supplier", FormMethod.Post, new { role = "form", id = "GroupForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.GroupID)
                        @Html.HiddenFor(model => model.GroupCode)
                        @Html.HiddenFor(model => model.IsActive)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.HiddenFor(model => model.CreatedBy)


                        <div class="row">

                            <div class="col-md-10">
                                @Html.LabelFor(model => model.GroupName, htmlAttributes: new { @class = "control-label required" }) 
                                
                                <div>
                                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" }) 
                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                <div>
                                    @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                      


                         

                        </div>

                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

                            <button type="button" id="create-Group-dialog-Edit" class="btn btn-primary">Save</button>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
